{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Video Generation Request Schema",
  "type": "object",
  "properties": {
    "video_length": {
      "type": "number",
      "description": "Total video length in seconds",
      "minimum": 15,
      "maximum": 30
    },
    "aspect_ratio": {
      "type": "string",
      "description": "Video aspect ratio",
      "enum": ["9:16", "1:1", "16:9"],
      "default": "9:16"
    },
    "resolution": {
      "type": "object",
      "properties": {
        "width": {
          "type": "integer",
          "default": 1080
        },
        "height": {
          "type": "integer",
          "default": 1920
        }
      }
    },
    "background_music": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "volume": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.3
        },
        "genre": {
          "type": "string",
          "enum": ["upbeat", "chill", "dramatic", "ambient"],
          "default": "upbeat"
        }
      }
    },
    "tts_config": {
      "type": "object",
      "service": "ElevenLabs",
      "properties": {
        "script": {
          "type": "string",
          "description": "Text to be converted to speech"
        },
        "voice_id": {
          "type": "string",
          "default": "21m00Tcm4TlvDq8ikWAM"
        },
        "speed": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 2.0,
          "default": 1.0
        },
        "volume": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.8
        }
      },
      "required": ["script"]
    },
    "video_segments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this segment"
          },
          "pexels_video_url": {
            "type": "string",
            "format": "uri",
            "description": "Direct download URL from Pexels"
          },
          "start_time": {
            "type": "number",
            "description": "When this segment starts in the final video (seconds)"
          },
          "duration": {
            "type": "number",
            "description": "How long this segment plays (seconds)"
          },
          "transition": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["cut", "fade"],
                "default": "cut"
              },
              "duration": {
                "type": "number",
                "description": "Transition duration in seconds",
                "minimum": 0,
                "maximum": 2,
                "default": 0.5
              }
            }
          },
          "effects": {
            "type": "object",
            "properties": {
              "crop": {
                "type": "object",
                "properties": {
                  "x": {"type": "number"},
                  "y": {"type": "number"},
                  "width": {"type": "number"},
                  "height": {"type": "number"}
                }
              },
              "zoom": {
                "type": "number",
                "minimum": 0.5,
                "maximum": 3.0,
                "default": 1.0
              },
              "speed": {
                "type": "number",
                "minimum": 0.5,
                "maximum": 2.0,
                "default": 1.0
              }
            }
          }
        },
        "required": ["id", "pexels_video_url", "start_time", "duration"]
      },
      "minItems": 1
    }
  },
  "required": ["video_length", "tts_config", "video_segments"]
}